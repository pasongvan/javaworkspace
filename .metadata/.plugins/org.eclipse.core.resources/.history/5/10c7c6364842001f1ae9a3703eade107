package java02_variable;

public class Var02_TypeCasting {
    public static void main(String[] args) {
        
        // 형 변환
    	
        // 1. 묵시적 형 변환
    	//	-범위가 작은 자료형 => 범위가 큰 자료형으로
    	int n1 = 100; // 주의할 점: 값 자체 아닌, 자료형에 주목
    	long n2 = n1; // 묵시적 형변환
    	
    	// 2. 명시적 형 변환
    	//	-범위가 큰 자료형 => 범위가 작은 자료형으로
    	long n3 = 100;
    	// int n4 = n3; // 에러
    	int n4 = (int) n3;
    	
    	// 리터럴
    	
    }
}
